<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_unhappy_face"
        android:background="@drawable/unhappy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <LinearLayout
        android:id="@+id/ll_nofootprint_tvs"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_unhappy_face"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亲,您玩的游戏去哪儿了？"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_come_here"
            android:text="@string/come_here"
            android:textColor="@color/blue"/>

    </LinearLayout>



    <LinearLayout
        android:layout_below="@+id/ll_nofootprint_tvs"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <rth.CustomView.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/game"
                app:riv_corner_radius="20dip"
                app:riv_border_width="1dp"
                app:riv_border_color="#333333"
                app:riv_mutate_background="true"
                app:riv_tile_mode="repeat"
                app:riv_oval="false"
                android:id="@+id/rounded_img_nofootprint1"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="@string/originality"
                android:textColor="@color/white"
                android:layout_alignBottom="@+id/rounded_img_nofootprint1"
                android:layout_alignRight="@+id/rounded_img_nofootprint1"
                android:layout_alignEnd="@+id/rounded_img_nofootprint1"
                android:layout_alignLeft="@+id/rounded_img_nofootprint1"
                android:layout_alignStart= "@+id/rounded_img_nofootprint1"
                android:background="@drawable/tv_alignroundview_bg"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_nofootprint_game_name1"
                android:text="前世情人"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_alignLeft="@+id/rounded_img_nofootprint1"
                android:layout_alignStart="@+id/rounded_img_nofootprint1"
                android:layout_alignEnd="@+id/rounded_img_nofootprint1"
                android:layout_alignRight="@+id/rounded_img_nofootprint1"
                android:layout_below="@+id/rounded_img_nofootprint1"
                android:layout_marginTop="10dp"
                android:gravity="center"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <rth.CustomView.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/game"
                app:riv_corner_radius="20dip"
                app:riv_border_width="1dp"
                app:riv_border_color="#333333"
                app:riv_mutate_background="true"
                app:riv_tile_mode="repeat"
                app:riv_oval="false"
                android:id="@+id/rounded_img_nofootprint2"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="@string/originality"
                android:textColor="@color/white"
                android:layout_alignBottom="@+id/rounded_img_nofootprint2"
                android:layout_alignRight="@+id/rounded_img_nofootprint2"
                android:layout_alignEnd="@+id/rounded_img_nofootprint2"
                android:layout_alignLeft="@+id/rounded_img_nofootprint2"
                android:layout_alignStart= "@+id/rounded_img_nofootprint2"
                android:background="@drawable/tv_alignroundview_bg"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_nofootprint_game_name2"
                android:text="合金弹头砰砰砰"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_alignLeft="@+id/rounded_img_nofootprint2"
                android:layout_alignStart="@+id/rounded_img_nofootprint2"
                android:layout_alignEnd="@+id/rounded_img_nofootprint2"
                android:layout_alignRight="@+id/rounded_img_nofootprint2"
                android:layout_below="@+id/rounded_img_nofootprint2"
                android:layout_marginTop="10dp"
                android:gravity="center"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <rth.CustomView.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/game"
                app:riv_corner_radius="20dip"
                app:riv_border_width="1dp"
                app:riv_border_color="#333333"
                app:riv_mutate_background="true"
                app:riv_tile_mode="repeat"
                app:riv_oval="false"
                android:id="@+id/rounded_img_nofootprint3"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="@string/originality"
                android:textColor="@color/white"
                android:layout_alignBottom="@+id/rounded_img_nofootprint3"
                android:layout_alignRight="@+id/rounded_img_nofootprint3"
                android:layout_alignEnd="@+id/rounded_img_nofootprint3"
                android:layout_alignLeft="@+id/rounded_img_nofootprint3"
                android:layout_alignStart= "@+id/rounded_img_nofootprint3"
                android:background="@drawable/tv_alignroundview_bg"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_nofootprint_game_name"
                android:text="找你妹"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_alignLeft="@+id/rounded_img_nofootprint3"
                android:layout_alignStart="@+id/rounded_img_nofootprint3"
                android:layout_alignEnd="@+id/rounded_img_nofootprint3"
                android:layout_alignRight="@+id/rounded_img_nofootprint3"
                android:layout_below="@+id/rounded_img_nofootprint3"
                android:layout_marginTop="10dp"
                android:gravity="center"/>

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>