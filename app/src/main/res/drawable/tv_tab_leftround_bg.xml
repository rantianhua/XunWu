<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_activated="true" android:color="@color/white">
        <shape android:shape="rectangle">
            <stroke android:color="#958b8d85" android:width="1dp"/>
            <solid android:color="#958b8d85" />
            <corners android:topLeftRadius="5dp"
                android:bottomRightRadius="0dp"
                android:bottomLeftRadius="5dp"
                android:topRightRadius="0dp"/>
        </shape>
    </item>

    <item android:state_activated="false" android:color="@android:color/secondary_text_light">
        <shape android:shape="rectangle">
            <stroke android:color="#958b8d85" android:width="1dp"/>
            <solid android:color="#ffffff" />
            <corners android:topLeftRadius="5dp"
                android:bottomRightRadius="0dp"
                android:bottomLeftRadius="5dp"
                android:topRightRadius="0dp"/>
        </shape>
    </item>

</selector>